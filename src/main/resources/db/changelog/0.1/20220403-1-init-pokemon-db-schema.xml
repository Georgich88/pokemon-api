<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1648967591689-1" author="Georgy Isaev">
        <createTable tableName="axual_pokemon">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_axual_pokemon"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="total" type="INT"/>
            <column name="hit_point" type="INT"/>
            <column name="attack" type="INT"/>
            <column name="defense" type="INT"/>
            <column name="special_attack" type="INT"/>
            <column name="special_defense" type="INT"/>
            <column name="speed" type="INT"/>
            <column name="generation" type="INT"/>
            <column name="is_legendary" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="1648967591689-2" author="Georgy Isaev">
        <createTable tableName="axual_pokemon_type">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_axual_pokemon_type"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1648967591689-3" author="Georgy Isaev">
        <createTable tableName="axual_pokemon_type_link">
            <column name="pokemon_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_axual_pokemon_type_link"/>
            </column>
            <column name="pokemon_type_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_axual_pokemon_type_link"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1648967591689-4" author="Georgy Isaev">
        <addForeignKeyConstraint baseColumnNames="pokemon_id" baseTableName="axual_pokemon_type_link"
                                 constraintName="fk_axupoktyp_on_pokemon_entity" referencedColumnNames="id"
                                 referencedTableName="axual_pokemon"/>
    </changeSet>
    <changeSet id="1648967591689-5" author="Georgy Isaev">
        <addForeignKeyConstraint baseColumnNames="pokemon_type_id" baseTableName="axual_pokemon_type_link"
                                 constraintName="fk_axupoktyp_on_pokemon_type_entity" referencedColumnNames="id"
                                 referencedTableName="axual_pokemon_type"/>
    </changeSet>

</databaseChangeLog>